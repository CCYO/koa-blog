<!-- 主導覽： NAV_CSS + NAV第一層template + backdrop Ele -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= locals.blog ? blog.title : locals.title ? title : '錯誤頁' %>
  </title>
  <link rel="icon" href="/public/favicon.svg" type="image/svg+xml">
  <!-- BS5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
<script defer src="/public/js/user.bundle.js"></script></head>

<body>
  <div id="loadingBackdrop"
    style="
    width: 100vw;
    height: 100vh;
    color: red;
    background: rgba(255, 255, 255, .5);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99999;
    display: flex;
    justify-content: center;
    align-items: center;
    color: black;
    font-size: 50px;
    font-family: 'JetBrainsMono', 'NotoSerifTC', 'Courier New', Courier, monospace !important;
    "
    tabindex="0"
>
  <div>
    LOADING
  </div>
</div>
  <nav class="navbar navbar-expand-md navbar-light bg-light fixed-top" style="display: none">
    <div class="container-fluid flex-nowrap">
        <!-- 首頁/廣場頁 -->
        <a class="navbar-brand" href="/square">KOA-BLOG</a>
        <!-- 廣場頁 + 註冊/登入 -->
        <ul class="nav ms-auto flex-grow-1 justify-content-end" id="noNeedCollapse-list">
            <li class="nav-item d-none d-sm-inline-block">
                <a class="nav-link" href="/square">廣場頁</a>
            </li>
            <li style="flex-grow: 1;"></li>
            <li class="nav-item">
                <a class="nav-link nav-tab" href="/register" data-my-tab="#register">註冊</a>
            </li>
            <li class="nav-item">
                <a class="nav-link nav-tab" href="/login" data-my-tab="#login">登入</a>
            </li>
        </ul>
        <!-- 收合鈕 -->
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- 收合內容 -->
        <div class="offcanvas offcanvas-start flex-grow-0" id="offcanvasNavbar">
            <!-- 收合內容 標題-->
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Offcanvas</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
            </div>

            <!-- 收合內容 表單列 -->
            <div class="offcanvas-body">
                <ul class="navbar-nav w-100" id="needCollapse-list">
                </ul>
            </div>
        </div>
    </div>
</nav>
  <!-- MAIN -->
  <main class="container-md" style="display: none;">
    <!-- 使用者資訊 + 文章列表 -->
    <div class="row">
      <div class="col-md-8">
        <!-- User container -->
        <div class="userInfo">
          <div class="card">
            <div class="row align-items-center justify-content-center">
              <div class="col-sm-4">
                <div class="avatar-box">
                  <div class="ratio ratio-1x1">
                    <img src="<%= currentUser.avatar %>" class="img-fluid" alt="...">
                  </div>
                  <% if(!isSelf){ %>
                  <button id="cancelFollow" type="button" class="btn btn-danger btn-sm follow">取消追蹤</button>
                  <button id="follow" type="button" class="btn btn-success btn-sm follow">追蹤</button>
                  <% } %>
                </div>

              </div>
              <div class="col-sm-8">
                <div class="card-body">
                  <h5 class="card-title">主要資料</h5>
                  <hr>
                  <p>信箱： <%= currentUser.email %>
                  </p>
                  <p>暱稱： <%= currentUser.nickname %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Blog container -->
        <div class="blogs-container">
          <!-- create Blog Modal -->
          <% if(isSelf){ %>
          <!-- Button for Modal -->
          <button type="button" class="btn btn-primary mb-1" data-bs-toggle="modal" data-bs-target="#new_blog_modal">
            撰寫新文章
          </button>
          <!-- Modal -->
          <div class="modal fade" tabindex="-1" aria-labelledby="newBlogModalLabel" aria-hidden="true" id="new_blog_modal">
            <div class="modal-dialog">
              <div class="modal-content">

                <div class="modal-body">
                  <div class="mb-3">
                    <label for="new_blog_title" class="form-label">文章標題</label>
                    <input type="text" name="title" class="form-control" id="new_blog_title" placeholder="文章標題">
                    <div>&nbsp;</div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消建立文章</button>
                  <button id="new_blog" type="button" class="btn btn-primary">建立文章</button>
                </div>
              </div>
            </div>
          </div>
          <% } %>
          <!-- BlogList -->
          <% for(let status in blogs){ %>
<% let isPublic = status === "public" %>
<% if(!isSelf && !isPublic){ continue }%>
<% let blogData = blogs[status] %>

<div class="card blogList bg-light" data-status="<%= status %>">
  <div class="card-header blogList-header align-items-center">
    <h5><%= isPublic ? '公開的BLOG' : '編輯中的BLOG' %></h5>
    <% if(isSelf && blogData.count) { %>
    <button type="button" class="btn btn-sm btn-outline-danger" data-remove-blog="list">全部刪除</button>
    <% } %>
  </div>
  <% if(blogData.count){ %>
  <ul>
    <% let page = 1 %>
    <% let blogs = blogData.blogs %>
    <li data-page="<%= page %>" class="fade <%= page === 1 ? 'show' : '' %>">
  <ul class="list-group list-group-flush">
    <% blogs.forEach( ( {id, author_id, title, time } ) => { %>
    <li data-blog-id="<%= id %>" class="list-group-item list-group-item-action list-group-item-info d-flex align-items-center justify-content-between">
      <div class="text-truncate me-3">
        <a class="stretched-link" href="/blog/<%= id %>">
          <%= title %>
        </a>
      </div>
      <div class="d-none d-sm-block">
        <span class="timestamp">上一次編輯<%= time %></span>
      </div>
      <% if(isSelf){ %>
      <div class="flex-shrink-0" style="z-index: 200;">
        <a class='btn btn-outline-primary btn-sm' href="/blog/edit/<%= id %>?owner_id=<%= author_id %>">編輯</a>
        <a class='btn btn-outline-primary btn-sm' data-remove-blog=item>刪除</a>
      </div>
      <% } %>
    </li>
    <% }) %>

    <!-- 填補START -->
    <% if(blogs.length < 5) {%>
    <% for(let i=5 - blogs.length; i> 0; i-- ){ %>
    <li class="list-group-item list-group-item-info d-flex align-items-center justify-content-between">
      <div class="text-truncate me-3">
        <span class="invisible">x</span>
      </div>
      <% if(isSelf){ %>
      <div class="flex-shrink-0 invisible">
        <a class='btn btn-outline-primary btn-sm'>編輯</a>
        <a class='btn btn-outline-primary btn-sm'>刪除</a>
      </div>
      <% } %>
    </li>
    <% } %>
    <% } %>
    <!-- 填補END -->
  </ul>
</li>
  </ul>
  <% if (blogData.count> 1) { %>
  <nav aria-label="...">
    <ul class="pagination">
      <li class="page-item">
        <a class="page-link pe-none" href="#" data-turn="previous-pagination">
          << </a>
      </li>
      <li class="page-item">
        <a class="page-link pe-none" href="#" data-turn="previous-page">Previous</a>
      </li>
      <% var totalPage=Math.ceil(blogData.count / 5) %>
      <% for(let page_num=1; totalPage>= page_num; page_num++){ %>
      <% if((page_num % 2)===1){ %>
      <!-- 除5若無餘數，要有ul li -->
      <ul class="pagination" data-pagination="<%= Math.ceil(page_num / 2) %>" <% if(Math.ceil(page_num / 2) > 1){ %> style="display: none;" <% } %>>
        <% } %>
        <!-- 除5無論有無餘數，都要li -->
        <li class="page-item <%= page_num === 1 ? 'active' : '' %>">
          <a class="page-link" href="#" data-turn="<%= page_num %>">
            <%= page_num %>
          </a>
        </li>
        <% if( !(page_num % 2) || page_num===totalPage ){ %>
      </ul>
      <% } %>
      <% } %>
      <li class="page-item">
        <a href="#" data-turn="next-page" class="page-link <%= totalPage < 2 ? "pe-none" : '' %>">Next</a>
      </li>
      <li class="page-item">
        <a href="#" data-turn="next-pagination" class="page-link <%= totalPage <= 2 ? "pe-none" : '' %>"> >> </a>
      </li>
    </ul>
  </nav>
  <% } %>

  <% } else { %>
  <p class="p-3">沒有<%= isPublic ? '公開' : '編輯中' %>的BLOG <%= blogs.public.count %>
  </p>
  <% } %>
</div>

<% } %>
        </div>
      </div>
      <hr class="d-md-none">
      <div class="col-md-4">
        <% for( type in relationShip){ %>
<% let list = relationShip[type] %>
<div class="relationShip-box">
  <h3><%= type === "fansList" ? "粉絲" : "偶像" %>列表</h3>
  <div id=<%= type %> class="relationShip-list-box">
    <% if(list.length) {%>
    <ul>
      <% list.forEach( user => { %>
      <li class="card" data-user-id="<%= user.id %>">
        <div class="ratio ratio-1x1">
          <img src="<%= user.avatar %>" class="card-img-top" alt="">
        </div>
        <div class="text-truncate">
          <a href="/other/<%= user.id %>" class="stretched-link">
            <%= user.nickname %>
          </a>
        </div>
      </li>

      <% }) %>
    </ul>
    <% } else { %>
    <p>很遺憾，列表裡沒有人</p>
    <% } %>
  </div>
</div>
<% } %>
      </div>
    </div>
    <!-- EJS DATA -->
    <div style="display: none;">
  <% for(let type in locals){ %>
  <%# if( type === "partials" || type === "filename" || type === "title" || type === "isSelf" || type === "temFn"){ continue } %>
  <% if( type === "blogs" || type === "currentUser" || type === "relationShip" || type === "blog" || type === "album"){ %>
  <div data-my-data="<%= type %>">
    <%- JSON.stringify(locals[type]) %>
  </div>
  <% } %>
  <% } %>
</div>
  </main>
  <!-- FOOTER -->
  <div class="footer container-fluid" style="display: none;">
  Footer
</div>
  <!-- BS5 / POPPER -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.1/dist/umd/popper.min.js"
    integrity="sha384-W8fXfP3gkOKtndU4JGtKDvXbO53Wy8SZCQHczT5FMiiqmQfUpWbYdTil/SxwZgAN"
    crossorigin="anonymous"></script>
<!-- BS5 / JS Plugin -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js"
    integrity="sha384-skAcpIdS7UcVUC05LJ9Dxay8AXcDYfBJqt1CJ85S/CFujBsIzCIv+l9liuYLaMQ/"
    crossorigin="anonymous"></script>
</body>

</html>