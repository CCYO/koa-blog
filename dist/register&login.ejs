<% let G_CONST = JSON.parse('{"API":{"LOGIN":"/api/user","REGISTER":"/api/user/register","LOGIN_SUCCESS":"/self","REGISTER_SUCCESS":"/login"},"MESSAGE":{"LOGIN_SUCCESS":"登入成功","LOGIN_FAIL":"登入失敗，請重新嘗試","REGISTER_SUCCESS":"註冊成功，請嘗試登入","REGISTER_FAIL":"註冊失敗，請重新嘗試"},"ID":{"LOGIN_FORM":"login","REGISTER_FORM":"register"},"NAME":{"EMAIL":"email","PASSWORD":"password","PASSWORD_AGAIN":"password_again"}}') %>
<!-- 主導覽： NAV_CSS + NAV第一層template + backdrop Ele -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= locals.blog ? blog.title : locals.title ? title : '錯誤頁' %>
  </title>
  <link rel="icon" href="/public/favicon.svg" type="image/svg+xml">
  <!-- BS5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
<script defer src="/public/register%26login.js"></script></head>

<body>
  <!-- 視窗遮蔽 -->
  <div id="loadingBackdrop"
    style="
    width: 100vw;
    height: 100vh;
    color: red;
    background: rgba(255, 255, 255, .5);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99999;
    display: flex;
    justify-content: center;
    align-items: center;
    color: black;
    font-size: 50px;
    font-family: 'JetBrainsMono', 'NotoSerifTC', 'Courier New', Courier, monospace !important;
    "
    tabindex="0"
>
  <div>
    LOADING
  </div>
</div>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-md navbar-light bg-light fixed-top" style="display: none">
  <div class="container-fluid flex-nowrap">
    <!-- 首頁/廣場頁 -->
    <a class="navbar-brand" href="/square">KOA-BLOG</a>
    <!-- 廣場頁 + 註冊/登入 -->
    <ul class="nav ms-auto flex-grow-1 justify-content-end" id="noNeedCollapse-list">
      <li class="nav-item d-none d-sm-inline-block">
        <a class="nav-link" href="/square">廣場頁</a>
      </li>
      <li style="flex-grow: 1;"></li>
      <li class="nav-item">
        <a class="nav-link nav-tab" href="/register" data-my-tab="#register">註冊</a>
      </li>
      <li class="nav-item">
        <a class="nav-link nav-tab" href="/login" data-my-tab="#login">登入</a>
      </li>
    </ul>
    <!-- 收合鈕 -->
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <!-- 收合內容 -->
    <div class="offcanvas offcanvas-start flex-grow-0" id="offcanvasNavbar">
      <!-- 收合內容 標題-->
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Offcanvas</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>

      <!-- 收合內容 表單列 -->
      <div class="offcanvas-body">
        <ul class="navbar-nav w-100" id="needCollapse-list">
        </ul>
      </div>
    </div>
  </div>
</nav>
  <!-- 數據讀取提示 -->
  <main style="display: none;">
    <!-- 註冊/登入 互動卡片-->
    <div class="card w-50 mx-auto">
      <!-- 卡片頭部 -->
      <div class="card-header">
        <!-- 頭部導行列-->
        <ul class="card-header-tabs nav nav-tabs">
          <!-- 頭部導行項-->
          <% for( let type in G_CONST.ID ){ %>
          <% let form_id = G_CONST.ID[type] %>
          <% let tab_txt = form_id === G_CONST.ID.REGISTER_FORM ? "註冊" : "登入" %>
          <li class="nav-item">
            <a class="nav-link <%= active === form_id ? `active` : `` %>" href="#" data-bs-toggle='tab' data-bs-target='#<%= form_id %>-card' role="tab" aria-controls=<%= form_id %> aria-selected="true"><%= tab_txt %></a>
          </li>
          <% } %>
        </ul>
      </div>
      <!-- 卡片主體 -->
      <div class="card-body tab-content">
        <!-- REGISTER PANE -->

        <% for( let type in G_CONST.ID ){ %>
        <% let form_id = G_CONST.ID[type] %>
        <% if(form_id === G_CONST.ID.REGISTER_FORM ){ %>
        <div class="tab-pane fade <%= active === form_id ? `show active` : `` %>" role="tabpanel" aria-labelledby="<%= form_id %>-tab" id="<%= form_id %>-card">
  <div class="col-8 mx-auto">
    <form id="<%= form_id %>" data-my-type="<%= form_id %>" class="row" autocomplete="do-not-autofill">
      <fieldset>

        <div class="mb-3">
          <label for="email" class="form-label">信箱</label>
          <input type="email" class="form-control" name="email" aria-describedby="email_help" autocomplete="off" required>
          <div>&nbsp;</div>
        </div>
      </fieldset>
      <fieldset>
        <div class="mb-3">
          <label for="input_password" class="form-label">密碼</label>
          <input type="password" class="form-control" name="password" data-retry='yes' autocomplete="new-password" required>
          <div>&nbsp;</div>
        </div>
        <div class="mb-3">
          <label for="input_check_password" class="form-label">密碼確認</label>
          <input type="password" class="form-control" name='password_again' autocomplete="off" required>
          <div>&nbsp;</div>
        </div>
      </fieldset>
      <button type="submit" class="btn btn-primary" disabled>送出</button>

    </form>
  </div>
</div>
        <% } else if (form_id === G_CONST.ID.LOGIN_FORM ){ %>
        <div class="tab-pane fade <%= active === form_id ? `show active` : `` %>" role="tabpanel" aria-labelledby="<%= form_id %>-tab" id="<%= form_id %>-card">
  <form id="<%= form_id %>" data-my-type="<%= form_id %>" class="row" autocomplete="do-not-autofill">
    <div class="col-8 mx-auto">
      <div class="mb-3">
        <label for="email" class="form-label">信箱</label>
        <input type="email" class="form-control" name="email" data-form-id='#form_login' autocomplete="off" aria-describedby="email_help" required>
        <div>&nbsp;</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">密碼</label>
        <input type="password" class="form-control" name="password" data-form-id='#form_login' autocomplete="do-not-autofill" required>
        <div>&nbsp;</div>
      </div>
      <button type="submit" class="btn btn-primary" disabled>送出</button>
    </div>
  </form>
</div>
        <% } %>
        <% } %>
      </div>
    </div>
  </main>
  <!-- BS5 / POPPER -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.1/dist/umd/popper.min.js" integrity="sha384-W8fXfP3gkOKtndU4JGtKDvXbO53Wy8SZCQHczT5FMiiqmQfUpWbYdTil/SxwZgAN" crossorigin="anonymous"></script>
<!-- BS5 / JS Plugin -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js" integrity="sha384-skAcpIdS7UcVUC05LJ9Dxay8AXcDYfBJqt1CJ85S/CFujBsIzCIv+l9liuYLaMQ/" crossorigin="anonymous"></script>
</body>

</html>