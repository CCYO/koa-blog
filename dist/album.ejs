<% let G_CONST = JSON.parse('{"ID":{"MODAL":"modal_album"},"DATASET":{"KEY":{"ALT_ID":"alt_id"}}}') %>
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= locals.blog ? blog.title : locals.title ? title : '錯誤頁' %>
  </title>
  <link rel="icon" href="/public/favicon.svg" type="image/svg+xml">
  <!-- BS5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
<script defer src="/public/album.js"></script></head>

<body>
  <div id="loadingBackdrop"
    style="
    width: 100vw;
    height: 100vh;
    color: red;
    background: rgba(255, 255, 255, .5);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99999;
    display: flex;
    justify-content: center;
    align-items: center;
    color: black;
    font-size: 50px;
    font-family: 'JetBrainsMono', 'NotoSerifTC', 'Courier New', Courier, monospace !important;
    "
    tabindex="0"
>
  <div>
    LOADING
  </div>
</div>
  <nav class="navbar navbar-expand-md navbar-light bg-light fixed-top" style="display: none">
  <div class="container-fluid flex-nowrap">
    <!-- 首頁/廣場頁 -->
    <a class="navbar-brand" href="/square">KOA-BLOG</a>
    <!-- 廣場頁 + 註冊/登入 -->
    <ul class="nav ms-auto flex-grow-1 justify-content-end" id="noNeedCollapse-list">
      <li class="nav-item d-none d-sm-inline-block">
        <a class="nav-link" href="/square">廣場頁</a>
      </li>
      <li style="flex-grow: 1;"></li>
      <li class="nav-item">
        <a class="nav-link nav-tab" href="/register" data-my-tab="#register">註冊</a>
      </li>
      <li class="nav-item">
        <a class="nav-link nav-tab" href="/login" data-my-tab="#login">登入</a>
      </li>
    </ul>
    <!-- 收合鈕 -->
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <!-- 收合內容 -->
    <div class="offcanvas offcanvas-start flex-grow-0" id="offcanvasNavbar">
      <!-- 收合內容 標題-->
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Offcanvas</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>

      <!-- 收合內容 表單列 -->
      <div class="offcanvas-body">
        <ul class="navbar-nav w-100" id="needCollapse-list">
        </ul>
      </div>
    </div>
  </div>
</nav>
  <!-- MAIN -->
  <main class="container-md" style="display: none;">
    <h1 class="mb-3">
      <%= blog.title %>的照片列表
    </h1>
    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-6 g-3">
      <% for( let alt_id in imgs ){  %>
      <div>
        <div class="card border-dark" data-<%= G_CONST.DATASET.KEY.ALT_ID %>="<%= alt_id %>">
          <div class="ratio ratio-1x1 border-bottom border-secondary">
            <img class="card-img-top" src="<%= imgs[alt_id].img.url %>?blogImgAlt=<%= alt_id %>" alt="<%= imgs[alt_id].alt %>" />
          </div>
          <div class="card-body">
            <p class="card-text text-truncate mb-0" style="height: 2rem; line-height: 2rem;">
              <%= imgs[alt_id].alt %>
            </p>
            <button type="button" class="btn btn-primary">
              修改照片名稱
            </button>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    <% let G_PAGE = JSON.parse('{"ID":{"MODAL":"modal_album"},"DATASET":{"KEY":{"ALT_ID":"alt_id"}}}') %>
<div class="modal fade" id="<%= G_PAGE.ID.MODAL %>" tabindex="-1" aria-labelledby="modalBackdrop" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">修改照片名稱</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="text" class="form-control">
        <div>&nbsp;</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消更新</button>
        <button type="button" class="btn btn-primary" disabled>更新</button>
      </div>
    </div>
  </div>
</div>
    <!-- EJS DATA -->
    <div style="display: none;">
  <%
      let whiteList = Object.values({
        user: ['currentUser', "relationShip", 'blogs'],
        blog: ['blog'],
        albumList: ['album'],
        album: ['blog', 'imgs'],
        setting: ['currentUser'],
        errPage: ['errModel', 'from', 'serverError']
      }).flat()
  %>
  <% for(let type in locals){ %>
  <% if( whiteList.some(item => item === type)){ %>
  <div data-my-data="<%= type %>">
    <%- JSON.stringify(locals[type]) %>
  </div>
  <% } %>
  <% } %>
</div>
  </main>

  <!-- FOOTER -->
  <div class="footer container-fluid" style="display: none;">
  FooterFooterFooterFooter
</div>
  <!-- BS5 / POPPER -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.1/dist/umd/popper.min.js" integrity="sha384-W8fXfP3gkOKtndU4JGtKDvXbO53Wy8SZCQHczT5FMiiqmQfUpWbYdTil/SxwZgAN" crossorigin="anonymous"></script>
<!-- BS5 / JS Plugin -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js" integrity="sha384-skAcpIdS7UcVUC05LJ9Dxay8AXcDYfBJqt1CJ85S/CFujBsIzCIv+l9liuYLaMQ/" crossorigin="anonymous"></script>
</body>

</html>