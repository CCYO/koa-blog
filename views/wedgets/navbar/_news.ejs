<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
    data-bs-auto-close="outside" aria-expanded="false">
    通知
    <span
        class="position-absolute translate-middle badge rounded-pill bg-danger news-count <%= newsList.count ? 'my-show' : 'my-noshow' %> ">
        <%= newsList.count %>
    </span>
</a>
<!-- 通知列表 -->
<ul class="dropdown-menu" aria-labelledby="navbarDropdown" id="newList">

    <!-- 新通知標題 -->
    <li class="dropdown-item <%= newsList.unconfirm.length ? 'my-show' : 'my-noshow' %>" id="new-news-title">新通知</li>

    <% if (newsList.unconfirm.length) { %>

    <%- include('./news-forEach', { list: newsList.unconfirm })  %> 

    <% } %>

    <!-- 先前通知的標頭 -->
    <li class="dropdown-item <%= newsList.confirm.length ? 'my-show' : 'my-noshow' %>" id="old-news-title">先前的通知</li>

    <% if (newsList.confirm.length) { %>

    <%- include('./news-forEach', { list: newsList.confirm })  %> 

    <% } %>
    
    <!-- 讀取更多 -->
    <li class="<%= true ? 'my-show' : 'my-noshow' %>" id="more_news">
        <button class="dropdown-item link-primary" type="button">
            讀取更多
        </button>
    </li>

    <!-- 沒有任何通知-->
    <li class="dropdown-item <%= !true ? 'my-show' : 'my-noshow' %>" id="nonews">
        <span>沒有新通知</span>
    </li>

    <li>
        <hr class="dropdown-divider">
    </li>
</ul>