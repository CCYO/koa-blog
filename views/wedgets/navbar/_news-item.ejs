<% if (type === 1) { %>

<!-- 新通知 of fans -->
<li class="dropdown-item position-relative news-item" data-my-news-id="<%= id %>">
    <a href="/other/<%= data.fans_id %>" class="stretched-link">
        <div>
            <span><%= data.nickname %>追蹤你囉！</span><br>
            <span><%= data.time %> </span>
        </div>
    </a>
</li>

<% } else if (type === 2) { %>

<!-- 新通知 of blog -->
<li class="dropdown-item  position-relative news-item" data-my-news-id="<%= id %>">
    <a href="/blog/<%= data.blog_id %>" class="stretched-link">
        <div>
            <span><%= data.nickname %> 有新文章唷！</span><br>
            <span>- <%= data.title %> -</span><br>
            <span><%= data.time %> </span>
        </div>
    </a>
</li>

<% } %>