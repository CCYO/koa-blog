<nav class="navbar navbar-expand-md navbar-light bg-light fixed-top">
    <div class="container-fluid flex-nowrap">
        <a class="navbar-brand" href="/square">KOA-BLOG</a>

        <ul class="nav nav-pills ms-auto me-3 order-md-2">
            <% if (!logging) { %>
            <li class="nav-item">
                <a class="nav-link nav-tab <%= active === 'register' ? `active` : `` %>" href="/register"
                    data-my-tab="#register">註冊</a>
            </li>
            <li class="nav-item">
                <a class="nav-link nav-tab <%= active === 'login' ? `active` : `` %>" href="/login"
                    data-my-tab="#login">登入</a>
            </li>
            <% } else { %>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                    data-bs-auto-close="outside" aria-expanded="false" id="news_confirm"
                    data-comfirm_time="<%= comfirm_time %>">
                    通知
                    <% if (count) { %>
                    <span class="position-absolute translate-middle badge rounded-pill bg-danger news-count">
                        <%= count %>
                    </span>
                    <% } %>
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown" id="newList">
                    <% if (news.length) { %>
                    <% news.forEach(({type, data}) => { %>
                    <% if (type === 'fans') { %>
                    <li class="dropdown-item">
                        <a href="/other/<%= data.id %>?confirm=true">
                            <span><%= data.nickname %>追蹤你囉！</span><br>
                            <span><%= data.showAt %> </span>
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <% } else if (type === 'blogNews') { %>
                    <li class="dropdown-item">
                        <a href="/blog/<%= data.id %>?confirm=true">
                            <span><%= data.author.nickname %> 有新文章唷！</span><br>
                            <span>- <%= data.title %> -</span><br>
                            <span><%= data.showAt %> </span>
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <% } %>
                    <% }) %>
                    <li>
                        <button class="dropdown-item link-primary" style="display: <%= !more ? 'none' : 'block'%>"
                            type="button" id="more_news" data-api="/api/user/moreNews?index=<%= index %>">
                            讀取更多</button>
                    </li>
                    <li class="dropdown-item" style="display: <%= more ? 'none' : 'block'%>" id="nonews">
                        <span>沒有新通知</span>
                    </li>
                    
                    <% } else { %>
                        <li class="dropdown-item" style="display: <%= more ? 'none' : 'block'%>" id="nonews">
                            <span>沒有新通知</span>
                        </li>
                    <% } %>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                </ul>
            </li>
