                            <% fansList.forEach(fans=> { %>
                                <li class="card follow-box m-1 p-1" data-fans-id="<%= fans.id %>">
                                    <div class="ratio ratio-1x1 mb-1">
                                        <img src="<%= fans.avatar %>" class="card-img-top" alt="">
