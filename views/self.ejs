<%- include('wedgets/common/header') %>

<body>
    <style>
        .avatar-box {
            width: 100%;
            display: flex;
            align-items: center;
        }

        .avatar-box>img {
            width: 20%;
            min-width: 70px;
            margin-right: 1rem;
        }

        .btn-blog-edit {
            z-index: 2;

        }

        .btn-blog-edit>a {

            background: #fff;
        }

        .follow-box {
            width: 70px;
            background: rgba(255, 255, 255, .1);
            border: none;
        }

        .follow-box:hover {
            background: rgba(255, 255, 255, .3);
        }

        .follow-box a {
            text-decoration: none;
            font-size: 0.25rem;
        }

        .list-group>.btn {
            margin-left: auto;
            margin-right: 0;
        }

        .blogList {
            border: 1px solid rgba(0, 0, 0, .3);
            margin-bottom: .5rem;
        }

        .blogList>* {
            padding: .5rem
        }

        .blogList-header {
            display: flex;
            justify-content: space-between;
        }

        .blogList-header>h2 {
            margin: 0;
        }

        .blogList-header>.btn {
            margin-left: auto;
            margin-right: 0;
        }
    </style>
    <!-- 主導覽 -->
    <%- include('wedgets/navbar/index') %>

    <div class="container">
        <div class="row">
            <div class="col-8" style="background: rgba(255, 125, 220, .9);">
                <h1>主要資料</h1>
                <div class="userInfo">
                    <div class='avatar-box'>
                        <img src="<%= currentUser.avatar %>" alt="" srcset="">

                        <% if (isMyIdol !== undefined) { %>
                        <button id="cancelFollow" data-user-id="<%= currentUser.id %>"
                            class="<%= isMyIdol ? 'my-show' : 'my-noshow' %>">取消追蹤</button>
                        <button id="follow" data-user-id="<%= currentUser.id %>"
                            class="<%= !isMyIdol ? 'my-show' : 'my-noshow' %>">追蹤</button>
                        <% } %>

                    </div>
                    <p>
                        <%= currentUser.email %>
                    </p>
                    <p>
                        <%= currentUser.nickname %>
                    </p>
                </div>
                <hr>
                <div id="blogs">
                    <div>
                        <% if (isMyIdol === undefined) { %>
                        <a href="/blog/new">撰寫新文章</a>
                        <% } %>
                    </div>

                    <div class="blogList bg-light p-2" data-my-blog-key="show">
                        <% if(blogList.show.length){ %>
                        <div class="blogList-header">
                            <h2>已發布的BLOG</h2>
                            <button type="button"
                                class="btn btn-sm btn-outline-danger <%= blogList.show.length? 'my-show' : 'my-noshow'%>"
                                data-my-blogs="show">全部刪除</button>
                        </div>
                        <ul class="list-group list-group-flush">
                            <% blogList.show[0].forEach(({id, title}) => { %>
                            <li
                                class="list-group-item list-group-item-action list-group-item-info d-flex align-items-center justify-content-between">
                                <a href="/blog/<%= id %>" class="stretched-link">
                                    <%= title %>
                                </a>

                                <% if (isMyIdol === undefined) { %>
                                <div class="btn-blog-edit">
                                    <a class='btn btn-outline-primary btn-sm' href="/blog/edit/<%= id %>">編輯</a>
                                    <a class='btn btn-outline-primary btn-sm' data-my-remove-blog="<%= id %>">刪除</a>
                                </div>
                                <% } %>

                            </li>
                            <% }) %>
                        </ul>

                        <% } else { %>

                        <p>沒有發布的BLOG</p>

                        <% } %>
                    </div>

                    <% if (isMyIdol === undefined) { %>

                    <div class="blogList bg-light p-2" data-my-blog-key="hidden">
                        <div class="blogList-header">
                            <h2>編輯中的BLOG</h2>
                            <button type="button"
                                class="btn btn-sm btn-outline-danger <%= blogList.hidden.length? 'my-show' : 'my-noshow'%>"
                                data-my-blogs="hidden">全部刪除</button>
                        </div>

                        <% if(blogList.hidden.length){ %>


                        <ul class="list-group list-group-flush">

                            <% blogList.hidden[0].forEach(({id, title}) => { %>

                            <li
                                class="list-group-item list-group-item-action list-group-item-info d-flex align-items-center justify-content-between">
                                <div>
                                    <a class="stretched-link" href="/blog/<%= id %>">
                                        <%= title %>
                                    </a>
                                </div>

                                <% if (isMyIdol === undefined) { %>
                                <div class="btn-blog-edit">
                                    <a class='btn btn-outline-primary btn-sm' href="/blog/edit/<%= id %>">編輯</a>
                                    <a class='btn btn-outline-primary btn-sm' data-my-remove-blog="<%= id %>">刪除</a>
                                </div>
                                <% } %>

                            </li>

                            <% }) %>
                        </ul>
                        <nav aria-label="...">
                            <ul class="pagination">
                                <li class="page-item disabled">
                                    <a class="page-link">Previous</a>
                                </li>
                                <% blogList.hidden.forEach((item, ind, arr) => { %>
                                    <% if(ind){ %>
                                <li class="page-item">
                                    <a class="page-link" href="#"><% ind %></a>
                                </li>
                                <% } %>
                                <% }) %>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                        <% } else { %>
                        <p>沒有編輯中的BLOG</p>
                        <% } %>
                    </div>
                    <% } %>
                </div>
            </div>
            <div class="col-4" style="background: rgba(255, 185, 100, .9)">
                <h1>次要資料</h1>
                <div>
                    <p>Fans</p>
                    <% if (fansList.length) { %>
                    <ul id="fansList" class="d-flex flex-wrap p-0">
                        <% fansList.forEach(fans => { %>

                        <li class="card follow-box m-1" data-fans-id="<%= fans.id %>">
                            <img src="<%= fans.avatar %>" class="card-img-top" alt="">
                            <div class="card-body text-center">
                                <a href="/other/<%= fans.id %>" class="stretched-link">
                                    <%= fans.nickname %>
                                </a>
                            </div>
                        </li>

                        <% }) %>
                    </ul>
                    <% } %>
                </div>
                <div>
                    <p>idols</p>
                    <% if (idolList.length) { %>
                    <ul class="d-flex flex-wrap p-0">
                        <% idolList.forEach(idol => { %>

                        <li class="card follow-box m-1">
                            <img src="<%= idol.avatar %>" class="card-img-top" alt="">
                            <div class="card-body text-center">
                                <a href="/other/<%= idol.id %>" class="stretched-link">
                                    <%= idol.nickname %>
                                </a>
                            </div>
                        </li>

                        <% }) %>
                    </ul>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <!-- JQ AXIOS BS5 -->
    <%- include('wedgets/cdn') %>

    <script>
        $(function () {
            let $btn_follow = $('#follow')
            let $btn_cancelFollow = $('#cancelFollow')
            let $btn_removeBlog = $('[data-my-remove-blog]')
            let $btn_removeBlogs = $('[data-my-blogs]')
            window.ddd = $btn_removeBlog
            let api_blog = '/api/blog'
            let api_follow = '/api/user/follow'
            let api_cancelFollow = '/api/user/cancelFollow'

            $btn_removeBlogs.click(async (e) => {
                let $blogList = $(e.target).parents('[data-my-blog-key]')
                let $children = [...$blogList.find('[data-my-remove-blog]')]
                let listOfBlogId = $children.reduce((init, cur) => {
                    init.push($(cur).data('my-remove-blog'))
                    return init
                }, [])

                const {
                    data: {
                        errno, data, msg
                    }
                } = await axios.delete(api_blog, { data: { id: listOfBlogId } })

                if (errno) {
                    alert(msg)
                } else {
                    $btn_removeBlogs.toggleClass('my-show my-noshow')
                    $blogList.append('<p>沒有文章</p>').children('ul').remove()

                    let key = $blogList.data('my-blog-key')
                    let list = window.data.blogList[key]

                    window.data.blogList[key] = []
                    alert('已成功刪除這些文章')
                }
                return
            })
            $btn_removeBlog.click(handle_removeBlog)

            async function handle_removeBlog(e) {
                if (!confirm('真的要刪掉?')) {
                    return
                }

                let $target = $(e.target)
                let id = $target.data('my-remove-blog')
                const {
                    data: {
                        errno, data, msg
                    }
                } = await axios.delete(api_blog, { data: { id } })

                if (errno) {
                    alert(msg)
                } else {
                    $(ddd[0]).parents("li").remove()
                    let key = $target.parents('[data-my-blog-key]').data('my-blog-key')
                    let list = window.data.blogList[key]
                    let ind = list.findIndex(item => item.id === id)
                    list.splice(ind, 1)
                    alert('已成功刪除此篇文章')
                }
                return
            }


            $btn_follow.click(handle_follow(true))
            $btn_cancelFollow.click(handle_follow(false))

            //  handle for follow or cancel follow
            function handle_follow(toFollow = true) {
                let api = toFollow ? api_follow : api_cancelFollow

                let { fansList, me } = window.data
                if (!me) {
                    return () => {
                        alert('請先登入')
                        location.href = `/login?from=${location.pathname}`
                    }
                }

                let feedback_func = () => {
                    if (toFollow) {
                        alert('已追蹤')
                        _btnFollowToggle()
                        fansList.unshift(me)
                        let html_li = `
                        <li class="card follow-box m-1" data-fans-id="${me.id}">
                            <img src="${me.avatar}" class="card-img-top" alt="">
                            <div class="card-body text-center">
                                <a href="/other/${me.id}" class="stretched-link">${me.nickname}</a>
                            </div>
                        </li>
                        `
                        $(`ul#fansList`).prepend(html_li)

                    } else {
                        alert('已退追')
                        _btnFollowToggle()
                        fansList.splice(fansList.indexOf(me.id), 1)
                        $(`li[data-fans-id='${me.id}']`).remove()
                    }

                }

                return async (e) => {
                    let $target = $(e.target)
                    let id = $target.data('user-id')
                    const {
                        data: {
                            errno, data, msg
                        }
                    } = await axios.post(api, { id })

                    if (!errno) {
                        feedback_func()
                    } else {
                        alert('操作發生錯誤')
                        console.log(msg)
                    }
                }
            }

            function _btnFollowToggle() {
                $btn_follow.toggle()
                $btn_cancelFollow.toggle()
            }


        })
    </script>
</body>

</html>