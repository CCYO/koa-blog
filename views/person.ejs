<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><% currentUser.nickname %>的主頁</title>
    <!-- BS5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <style>
        .avatar-box {
            width: 100%;
            display: flex;
            align-items: center;
        }

        .avatar-box>img {
            width: 20%;
            min-width: 70px;
            margin-right: 1rem;
        }

        .btn-blog-edit {
            z-index: 2;
            background: #fff;
        }

        .follow-box {
            width: 70px;
            background: rgba(255, 255, 255, .1);
            border: none;
        }

        .follow-box:hover {
            background: rgba(255, 255, 255, .3);
        }

        .follow-box a {
            text-decoration: none;
            font-size: 0.25rem
        }
    </style>
    <%- include('wedgets/common/index-css') %>

</head>

<body>
    <!-- 主導覽 -->
    <%- include('wedgets/navbar/navbar') %> 

    <div class="container">
        <div class="row">
            <div class="col-8" style="background: rgba(255, 125, 220, .9);">
                <h1>主要資料</h1>
                <div class="userInfo">
                    <div class='avatar-box'>
                        <img src="<%= currentUser.avatar %>" alt="" srcset="">
                        <% if (isMyIdol !== undefined) { %>
                        <button id="cancelFollow" class="<%= isMyIdol ? 'my-show' : 'my-noshow' %> ">取消追蹤</button>
                        <button id="follow" class="<%= !isMyIdol ? 'my-show' : 'my-noshow' %> ">追蹤</button>
                        <% } else if (isMyIdol === undefined) { %>
                        <button id="logout">登出</button>
                        <% } %>
                    </div>
                    <p><%= currentUser.email %> </p>
                    <p><%= currentUser.nickname %> </p>
                </div>
                <hr>
                
                <div id="blogs">
                    <div id="public-blog">
                        <h2>BLOG列表</h2>
                        <% if(blogList.show.length){ %>
                            <h1>文章列表</h1>
                            <ul class="list-group list-group-flush">
                                <% blogList.show.forEach(({id, title}) => { %>
                                <li
                                    class="list-group-item list-group-item-action list-group-item-info d-flex align-items-center justify-content-between">
                                    <a href="/blog/<%= id %>" class="stretched-link"><%= title %> </a>
                                </li>
                                <% }) %>
                            </ul>
                        <% } else { %>
                        <p>沒有發布的BLOG</p>
                        <% } %>
                        <% if(blogList.hidden.length){ %>
                            <h1>草稿列表</h1>
                            <ul class="list-group list-group-flush">
                                <% blogList.hidden.forEach(({id, title}) => { %>
                                <li
                                    class="list-group-item list-group-item-action list-group-item-info d-flex align-items-center justify-content-between">
                                    <a href="/blog/<%= id %>" class="stretched-link"><%= title %> </a>
                                </li>
                                <% }) %>
                            </ul>
                        <% } else { %>
                        <p>沒有草稿</p>
                        <% } %>
                    </div>



                </div>


            </div>

            <div class="col-4" style="background: rgba(255, 185, 100, .9);">
                <h1>次要資料</h1>
                <div>
                    <p>Fans</p>
                    <% if (fansList.length) { %>
                    <ul class="d-flex flex-wrap p-0">
                        <% fansList.forEach(fans => { %>

                        <li class="card follow-box m-1">
                            <img src="<%= fans.avatar %>" class="card-img-top" alt="">
                            <div class="card-body text-center">
                                <a href="/other/<%= fans.id %>" class="stretched-link"><%= fans.nickname %></a>
                            </div>
                        </li>

                        <% }) %>
                    </ul>
                    <% } %>
                </div>
                <div>
                    <p>idols</p>
                    <% if (idolList.length) { %>
                    <ul class="d-flex flex-wrap p-0">
                        <% idolList.forEach(idol => { %>

                        <li class="card follow-box m-1">
                            <img src="<%= idol.avatar %>" class="card-img-top" alt="">
                            <div class="card-body text-center">
                                <a href="/other/<%= idol.id %>" class="stretched-link"><%= idol.nickname %></a>
                            </div>
                        </li>

                        <% }) %>
                    </ul>
                    <% } %>
                </div>
            </div>
        </div>
        <div id="data" class="my-noshow">
            <%= JSON.stringify(currentUser) %>
        </div>
    </div>
    <%- include('wedgets/cdn') %>
    <%- include('wedgets/navbar/navbar-js') %> 
    <script>
        $(function () {
            //  { id, email, nickname, age, avatar, avatar_hash }
            let currentUser = JSON.parse($('#data').text())
            let btn_follow = $('#follow')
            let btn_cancelFollow = $('#cancelFollow')
            let btn_logout = $('#logout')
            let api_follow = '/api/user/follow'
            let api_cancelFollow = '/api/user/cancelFollow'
            let api_logout = '/api/user/logout'

            $('#data').remove()

            btn_follow.click(handle_follow)
            btn_cancelFollow.click(handle_cancelFollow)
            btn_logout.click(handle_logout)

            async function handle_logout() {
                let { errno } = await axios.get(api_logout)
                if (!errno) {
                    alert('BYE')
                    location.pathname = '/login'
                } else {
                    alert('登出失敗')
                }
            }

            async function handle_cancelFollow() {
                let { errno } = await axios.post(api_cancelFollow, { id: currentUser.id })

                if (!errno) {
                    alert('已取消追蹤')
                    btn_follow.toggle()
                    btn_cancelFollow.toggle()
                } else {
                    alert('失敗')
                }
            }

            async function handle_follow() {
                let { errno } = await axios.post(api_follow, { id: currentUser.id })

                if (!errno) {
                    alert('追蹤成功')
                    btn_follow.toggle()
                    btn_cancelFollow.toggle()
                } else {
                    alert('失敗')
                }
            }

        })
    </script>
</body>

</html>