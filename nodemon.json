{
    "ignore": [
        "node_modules/**"
    ],
    "watch": [
        "src/__views/",
        "server/"
    ],
    "env": {
        "PORT": 8080
    },
    "events": {
        "crash": "sh -c 'lsof -i :${PORT:-8080} -t | xargs kill'"
    },
    "exec": "node server/bin/www",
    "ext": "js,mjs,json,ejs"
}