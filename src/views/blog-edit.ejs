<!-- MAIN -->
<main class="container-md main" style="display: none;">
  <div>
    <input type="text" data-action="changeTitle" name="title" class="form-control" value="<%%= blog.id ? blog.title : '' %>">
    <div class="valid-feedback">
      Looks good!
    </div>
    <button data-action="updateTitle" disabled>修改標題</button>
  </div>
  <div id="editor-wrapper">
    <div id="toolbar-container"></div>
    <div id="editor-container"></div>
    <span data-selector="wordCount"></span>

    <label> <input type="checkbox" id="show" data-action="pubOrPri" <%%= blog.show ? 'checked' : '' %> />公開文章</label>
    <%% if (blog.show) { %>
      <p>已於 <%%= blog.showAt %> 發佈</p>
      <%% } else { %>
        <p>最近一次於 <%%= blog.updatedAt %> 編輯</p>
        <%% } %>
          <button data-action="updateBlog" disabled>存檔</button>
          <button data-action="removeBlog">刪除此篇文章</button>
  </div>
  <div style="display: none;">
    <!-- 當前使用者頁面的使用者資料 -->
    <div data-my-data="blog">
      <%%- JSON.stringify(blog) %>
    </div>
  </div>
</main>
